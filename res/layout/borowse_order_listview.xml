<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="horizontal" 
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/bor_order_list_sequence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1" />

    <TextView
        android:singleLine="true"
        android:gravity="center_vertical"
        android:id="@+id/bor_order_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="菜名" />

    <TextView
        android:id="@+id/bor_order_list_unilt_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="单价" />

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/bor_order_list_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/left_btn" />

    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/bor_order_list_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="数量" />

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/bor_order_list_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_btn" />

    <TextView
        android:id="@+id/bor_order_list_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="价格" />

    <TextView
        android:singleLine="true"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/bor_order_list_remarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="备注" />

    <TextView
        android:id="@+id/bor_order_list_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="种类" />

    <ImageButton
        android:background="@drawable/btn_delete1"
        android:id="@+id/bor_order_list_del"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="删除" />

</LinearLayout>