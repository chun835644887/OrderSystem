<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/menu_background">
<ImageView 
    android:layout_toLeftOf="@+id/more_check"
    android:layout_marginRight="24dp"
    android:id="@+id/more_image"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="40dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gallery6"/>    

<Button 
    android:layout_marginTop="24dp"
    android:layout_marginRight="8dp"
    android:layout_alignParentRight="true"
    android:background="@drawable/more_check"
    android:layout_width="wrap_content"
    android:layout_height="16dp"
    android:id="@+id/more_check"/>
<Button 
    android:layout_marginTop="8dp"
    android:layout_below="@id/more_check"
    android:layout_alignLeft="@id/more_check"
    android:background="@drawable/more_change"
    android:layout_width="wrap_content"
    android:layout_height="16dp"
    android:id="@+id/more_change"/>
<Button 
    android:layout_marginTop="8dp"
    android:layout_below="@id/more_change"
    android:layout_alignLeft="@id/more_change"
    android:background="@drawable/more_combine"
    android:layout_width="wrap_content"
    android:layout_height="16dp"
    android:id="@+id/more_with"/>
<Button 
    android:layout_marginTop="8dp"
    android:layout_below="@id/more_with"
    android:layout_alignLeft="@id/more_with"
    android:background="@drawable/more_update"
    android:layout_width="wrap_content"
    android:layout_height="16dp"
    android:id="@+id/more_update"/>

</RelativeLayout>
